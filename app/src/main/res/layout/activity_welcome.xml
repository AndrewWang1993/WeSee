<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="peoce.info.wesee.Welcome">

    <ImageView
        android:id="@+id/welcome_iv_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/welcome_1"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/welcome_tv_1"
        android:text="@string/main_title1"
        android:textSize="45sp"
        android:textColor="#ffffffff"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/welcome_tv_2"
        android:layout_marginTop="20dp"
        android:layout_below="@id/welcome_tv_1"
        android:text="@string/main_title2"
        android:textSize="15sp"
        android:textColor="#ffffffff"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
